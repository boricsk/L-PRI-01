<Window x:Class="RGBSzinek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGBSzinek"
        xmlns:ViewModels="clr-namespace:RGBSzinek.ViewModel"
        mc:Ignorable="d"
        Title="RGB Colors" Height="497" Width="820" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <ViewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Margin="0" Height="64" ToolTip="Open file" Command="{Binding OpenFile}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/icons8-open-file-64.png" />
                </StackPanel>
            </Button>

            <Separator/>
            <WrapPanel VerticalAlignment="Center">
                <Label Content="X"   VerticalAlignment="Top"/>
                <TextBox Text="{Binding XCoord}" Width="60" VerticalContentAlignment="Center"/>
                <Label Content="Y"  VerticalAlignment="Top" />
                <TextBox Text="{Binding YCoord}"  Width="60" VerticalContentAlignment="Center"/>
            </WrapPanel>
            <Button Command="{Binding GrabColor}" Content="Grab color" Height="80" Width="80" Margin="10 0 0 0"/>
            <Separator/>
            <Button Command="{Binding CountLightPixel}" Content="Light pixel" Height="80" Width="80" />
            <Separator/>
            <Button Command="{Binding GetBorders}" Content="Borders" Width="80" Height="80"/>
            <Separator/>
            <Button Command="{Binding GetDarkestPixels}" Content="Dark pixel" Height="80" Width="80"/>
            <Separator/>
        </ToolBar>       
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Image  Height="360"  Grid.Column="0" Width="640" Source="{Binding LoadedImage}"/>
            <ListBox Grid.Column="1" ItemsSource="{Binding DarkestPointsRgbCode}" />
        </Grid>
    </Grid>
</Window>
