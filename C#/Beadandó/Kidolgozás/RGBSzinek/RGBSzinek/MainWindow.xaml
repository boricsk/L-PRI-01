<Window x:Class="RGBSzinek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGBSzinek"
        xmlns:ViewModels="clr-namespace:RGBSzinek.ViewModel"
        mc:Ignorable="d"
        Title="RGB Colors" Height="640" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <ViewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0">
            <Button Margin="0" Height="64" ToolTip="Open file" Command="{Binding OpenFile}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/icons8-open-file-64.png" />
                </StackPanel>
            </Button>
            <Separator/>

        </ToolBar>
        <Image HorizontalAlignment="Left" Height="360" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="640" Source="{Binding LoadedImage}"/>
        <Button Command="{Binding GrabColor}" Content="Grab color" HorizontalAlignment="Left" Margin="10,497,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.315,-0.299" Width="82"/>
        <TextBox HorizontalAlignment="Left" Margin="32,375,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding XCoord}" VerticalAlignment="Top" Width="60"/>
        <Label Content="X" HorizontalAlignment="Left" Margin="10,371,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Y" HorizontalAlignment="Left" Margin="10,402,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="32,406,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding YCoord}" VerticalAlignment="Top" Width="60"/>
        <Label Content="{Binding RGBColorCode}" HorizontalAlignment="Left" Margin="10,428,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Command="{Binding CountLightPixel}" Content="Count light pixel" HorizontalAlignment="Left" Margin="115,497,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.315,-0.299" Width="115"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding DarkestPointsRgbCode}" Margin="250,375,425,52"/>
        <Button Command="{Binding GetDarkestPixels}" Content="Get darkest pixels" HorizontalAlignment="Left" Margin="250,497,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.315,-0.299" Width="125"/>
        <Button Command="{Binding GetBorders}" Content="Get Cloud Borders" HorizontalAlignment="Left" Margin="400,497,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.315,-0.299" Width="125"/>
    </Grid>
</Window>
